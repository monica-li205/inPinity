<script type="text/javascript" src="/scripts/create-post.js"></script>
<!-- Change the "src" attribute according to your installation path -->

<div class="modal fade" id="create-post" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create a post</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="box-container flex-row-space" id="create-post" action="/api/posts" method="POST" name="post-form">
          <%- include('./partials/upload'); %>
          <section class="flex-col" id="input-field">           
            <label for="category">Category</label>
            <fieldset class="dropdown" name="category">
              <select class="dropbtn" name="category">Dropdown</button>
                <option value ="Entertainment">Entertainment</option>
                <option value ="Sports">Sports</option>
                <option value ="Techology">Techology</option>
                <option value ="Fashion">Fashion</option>
                <option value ="Food">Food</option>
                <option value ="Animals">Animals</option>
                <option value ="Plants">Plants</option>
                <option value ="Art">Art</option>
              </select>
            </fieldset>
            <label for="title">title</label>
            <input type="text" name="title" id="name"/>
            <label for="tag">description</label>
            <textarea name="description" id="description" cols="30" rows="10"> </textarea>
            <label for="link" >link</label>
            <input type="text" name="url" id="post-url"/>
            <label for="link" >Image link</label>
            <input type="text" name="thumbnail_photo" id="image-url"/>
            <button class="mt-2 btn btn-info" type="submit">Post</button>
          </form>
            <button class="mt-2 btn btn-warning" id="generate-image">Generate Image</button>
          </section>
      </div>
    </div>
  </div>
</div>
